<Window x:Class="Intergraph.Oz.WpfApplication.Views.ViewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="View Dialog" Height="500" Width="500" ShowInTaskbar="False">

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="..\Themes\ViewDialogLayout.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" x:Name="_control" Width="auto" Height="auto">
        </DockPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1" >
                <Button Click="OK_Click" Style="{StaticResource ActionButton}">OK</Button>
                <Button Click="Cancel_Click" Style="{StaticResource ActionButton}">Cancel</Button>
            </StackPanel>
        </StackPanel>

    </Grid>

</Window>
