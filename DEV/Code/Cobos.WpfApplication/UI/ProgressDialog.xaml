<Window x:Class="Cobos.WpfApplication.UI.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Progress" Height="130" Width="350" ShowInTaskbar="False" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <StackPanel.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source=".\Themes\GridLayout.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </StackPanel.Resources>
        <TextBlock Name="_prompt" Style="{StaticResource GridTextBlockPrompt}" Height="30" TextWrapping="Wrap">Prompt goes here</TextBlock>
        <ProgressBar Name="_progress" Style="{StaticResource GridProgress}" Height="30"/>
    </StackPanel>
</Window>
