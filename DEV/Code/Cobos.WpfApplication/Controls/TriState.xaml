<UserControl x:Class="Intergraph.AsiaPac.WpfApplication.Controls.TriState"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="24" Width="180">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="Control" x:Key="Standard">
                    <Setter Property="Margin" Value="5" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <RadioButton Name="_Yes" GroupName="_TriStateProperty" Grid.Column="0" Grid.Row="0" Style="{StaticResource Standard}">Yes</RadioButton>
        <RadioButton Name="_No" GroupName="_TriStateProperty" Grid.Column="1" Grid.Row="0" Style="{StaticResource Standard}">No</RadioButton>
        <RadioButton Name="_NA" GroupName="_TriStateProperty" Grid.Column="2" Grid.Row="0" Style="{StaticResource Standard}">N/A</RadioButton>
    </Grid>
</UserControl>
