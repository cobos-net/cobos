<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!-- 
	=============================================================================
	Filename: Cobos.Codegen.Clean.targets
	Description: Cleans all generated files
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	Created by: N.Davis                        Date: 2010-02-09
	Modified by:                               Date:
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	Notes:  Import directly into your project file.


	============================================================================
	-->

	<Target Name="BeforeClean">
		<ItemGroup>
			<DeleteBeforeClean Include="$(ProjectDir)\**\Generated\*"/>
		</ItemGroup>
		<Message Text="Running BeforeClean Target from Codegen.Clean.VS2012.targets..."/>
		<Delete Files="@(DeleteBeforeClean)" />
	</Target>

</Project>

