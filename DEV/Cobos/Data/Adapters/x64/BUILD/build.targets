<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- 
  =============================================================================
  Build Definitions
  =============================================================================
  -->
  <PropertyGroup>
    <BinFolderNet45>$(ProjectDir)..\..\~bin\net45\</BinFolderNet45>
  </PropertyGroup>
  <!-- 
  =============================================================================
  Before Build  
  =============================================================================
  -->
  <Target Name="BeforeBuild">
  </Target>
  <!-- 
  =============================================================================
  After Build
  =============================================================================
  -->
  <Target Name="AfterBuild">
    <ItemGroup>
      <CobosBinaries Include="$(TargetPath)"/>
      <OracleBinariesX64 Include="$(ProjectDir)..\..\..\..\TOOLS\Oracle\net40\x64\*.dll"/>
    </ItemGroup>
    
    <MakeDir Directories="$(BinFolderNet45)" Condition="!Exists($(BinFolderNet45))"/>
    <MakeDir Directories="$(BinFolderNet45)x64"/>
    
    <Copy DestinationFolder="$(TargetDir)" SourceFiles="@(OracleBinariesX64)"/>
    <Copy DestinationFolder="$(BinFolderNet45)x64" SourceFiles="@(CobosBinaries)"/>
    <Copy DestinationFolder="$(BinFolderNet45)x64" SourceFiles="@(OracleBinariesX64)"/>
  </Target>
</Project>