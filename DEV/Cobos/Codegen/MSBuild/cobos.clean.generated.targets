<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!-- 
	=============================================================================
	Filename: cobos.clean.generated.targets
	Description: Cleans all generated files
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	Created by: N.Davis                        Date: 2010-02-09
	Modified by:                               Date:
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	Notes:  
	

	============================================================================
	-->
  <!--
	=============================================================================
	Common Build Targets
	=============================================================================
	-->
  <!-- If this Target is redefined in your project, make sure that you call CobosCleanGenerated -->
  <Target Name="BeforeClean">
    <CallTarget Targets="CobosCleanGenerated"/>
	</Target>
  <!--
	=============================================================================
	Clean Generated files
	=============================================================================
	-->
  <Target Name="CobosCleanGenerated">
    <ItemGroup>
      <DeleteBeforeClean Include="$(ProjectDir)\**\Generated\*"/>
    </ItemGroup>
    <Message Text="Running BeforeClean Target from cobos.clean.generated.targets..."/>
    <Delete Files="@(DeleteBeforeClean)" />
  </Target>
</Project>

